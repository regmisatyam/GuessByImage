<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg_2"
    tools:context=".SettingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Settings">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:background="@drawable/back_ui">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/privacyPolicyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="27dp"
                        android:layout_marginEnd="-27dp"
                        android:layout_toStartOf="@+id/cross_btn"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:text="@string/settings_txt"
                        android:textColor="#FFE500"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/cross_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/cross_btn" />
                </RelativeLayout>

                <!-- res/layout/activity_main.xml -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/Widget.AppCompat.Spinner"
                        android:layout_width="200dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:background="@drawable/spinner_bg"
                        android:dropDownWidth="200dp"
                        android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                        android:gravity="center"
                        android:paddingRight="14dp"
                        android:popupBackground="@android:color/white"
                        android:popupElevation="3dp"
                        android:stateListAnimator="@drawable/spinner_sla" />
                    <!-- Add other UI components as needed -->

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/privacy_policy_btn"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/privacy_policy" />

                    <ImageButton
                        android:id="@+id/rate_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/star_rate" />

                    <ImageButton
                        android:id="@+id/info_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/info" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="15dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <ImageButton
                    android:id="@+id/linkFb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/fb_logo"
                    />
                <ImageButton
                    android:id="@+id/link_ig"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/insta_logo"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <ImageButton
                    android:id="@+id/linkX"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/x_logo"
                    android:layout_marginEnd="20dp"/>
                <ImageButton
                    android:id="@+id/link_linkedin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/linkedin"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <com.google.android.gms.ads.nativead.NativeAdView
            android:id="@+id/native_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:gnt_template_type="@layout/gnt_medium_template_view" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>